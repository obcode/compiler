digraph finite_state_machine {
    rankdir=LR;
    size="3,3"
    node [shape = point, color=white, fontcolor=white]; start;
    node [shape = doublecircle, color=black, fontcolor=black]; Sn;
    node [shape = circle];
    start -> Sm;
    Sm -> Si;
    Sm -> Sk;
    Si -> Sj [ label = "a" ];
    Sk -> Sl [ label = "b" ];
    Sj -> Sn;
    Sl -> Sn;
}
