digraph finite_state_machine {
    rankdir=LR;
    size="3,3"
    node [shape = point, color=white, fontcolor=white]; start;
    node [shape = doublecircle, color=black, fontcolor=black]; S3;
    node [shape = circle];
    start -> S0;
    S0 -> S0 [ label = "a" ];
    S0 -> S1;
    S1 -> S2 [ label = "a" ];
    S2 -> S3 [ label = "b" ];
}
