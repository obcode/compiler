digraph finite_state_machine {
    rankdir=LR;
    size="3,3"
    node [shape = point, color=white, fontcolor=white]; start;
    node [shape = doublecircle, color=black, fontcolor=black]; Sl;
    node [shape = circle];
    start -> Si;
    Si -> Sj [ label = "a" ];
    Sj -> Sk;
    Sk -> Sl [ label = "b" ];
}
